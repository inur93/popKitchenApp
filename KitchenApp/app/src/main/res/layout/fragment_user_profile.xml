<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="*">
    <TableRow android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_profile_username"
            android:layout_weight="0.5"
            android:textSize="18sp"
            android:paddingTop="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/user_profile_name"/>
    </TableRow>
    <TableRow android:layout_width="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_profile_room_no"
            android:textSize="18sp"
            android:paddingTop="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_profile_room_no"/>
    </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <Button android:id="@+id/user_profile_edit_profile"
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_profile_edit_profile"
                android:textSize="18sp"
                android:gravity="center_vertical|center_horizontal|fill"
                android:textAlignment="center"
                android:layout_marginTop="10dp" />
        </TableRow>
    </TableLayout>


</LinearLayout>