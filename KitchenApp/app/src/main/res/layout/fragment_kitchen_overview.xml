<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dk.pop.kitchenapp.fragments.kitchen.KitchenOverviewFragment">


    <TextView
        android:text="@string/kitchen_overview_all_activities_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kitchen_overview_all_activities_text"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <Button
        android:text="@string/kitchen_overview_show_calendar_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kitchenOverviewShowCalendarBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <ListView
        android:id="@+id/kitchen_overview_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kitchen_overview_all_activities_text"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/kitchenOverviewShowCalendarBtn"
        android:layout_marginBottom="10dp" />

    <Button
        android:text="@string/kitchen_overview_create_activity_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kitchenOverviewCreateActivityBtn"
        android:layout_below="@+id/kitchen_overview_list_view"
        android:layout_toEndOf="@+id/kitchenOverviewShowCalendarBtn"
        android:layout_marginStart="29dp" />
</RelativeLayout>
