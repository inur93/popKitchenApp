<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dk.pop.kitchenapp.fragments.GroupCreationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:id="@+id/group_creation_search_field" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_creation_search_field"
            android:layout_alignParentStart="true"
            android:id="@+id/groupCreationLinearLayout">

            <Button
                android:text="Create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/loginSearchBtn"
                android:layout_alignBottom="@+id/loginSearchBtn"
                android:layout_alignEnd="@+id/loginListView"
                android:layout_weight="1"
                android:id="@+id/group_creation_create_btn" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/groupCreationLinearLayout"
            android:layout_alignEnd="@+id/group_creation_search_field"
            android:layout_below="@+id/groupCreationLinearLayout"
            android:id="@+id/group_creation_list_view" />

        <ProgressBar
            android:id="@+id/group_creation_spinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
