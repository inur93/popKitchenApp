<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:context="dk.pop.kitchenapp.fragments.personal.PersonalPageFragment">
    <!--<TextView
        android:text="Change Personal Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/personal_page_header"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:paddingTop="30dp"/>-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/personal_page_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/personal_page_name_field"
        android:hint="Name"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/personal_page_name_field"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/personal_page_room_text"
        android:layout_alignParentEnd="true"
        android:hint="Room Number" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personal_page_save_btn"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true" />

</LinearLayout>
